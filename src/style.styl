// Reads/solves button fix
#summit-reads-solves
  color: white
  padding-inline: 15px
  padding-top: 12px
  padding-bottom: 5px
  font-weight: 500
  border-radius: 6px
  height: var(--left-nav-item-height)

  span:has(svg)
    font-size: 0
    &::after
      content: "Reads/Solves"
      font-size: var(--legacy-size-font-sm) !important
      margin-left: -2px
    svg
      position: relative
      top: 0.25rem
      left: -1px
      transform: translateY(-5px)
      margin-top: -10px
      margin-right: 18px
      flex: none
      vertical-align: middle
      font-size: 1.5rem
      line-height: 1.333

li.summit-reads-solves
  border-radius: 6px
  .dropdown-menu
    background-color: white !important

