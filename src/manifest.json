{
  "manifest_version": 3,
  "name": "BetterSLP",
  "short_name": "A supercharged Summit Learning experience",
  "version": "0.0.0",
  "description": "An extension that adds improvements to the Summit Learning Platform.",
  "content_scripts": [
    {
      "matches": ["*://*.summitlearning.org/*"],
      "css": ["bundle.css", "stylus.css"],
      "js": ["content.js"],
      "run_at": "document_start",
      "exclude_matches": [
        "*://*.summitlearning.org/assessment_takes/*",
        "*://*.summitlearning.org/math_unit_assessment/*"
      ]
    }
  ],
  "icons": {
    "16": "./assets/icon16.png",
    "48": "./assets/icon48.png",
    "128": "./assets/icon128.png"
  },
  "background": {
    "service_worker": "worker.js"
  },
  "permissions": ["tabs", "storage", "unlimitedStorage"]
}
